<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title || "SyncMA - Manajemen Organisasi Mahasiswa" }}</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Feather Icons (untuk ikon) -->
  <script src="https://unpkg.com/feather-icons"></script>

  <!-- Alpine.js (untuk interaktif sidebar) -->
  <script src="https://unpkg.com/alpinejs" defer></script>

  @if ($slots.meta)
    {{{ await $slots.meta() }}}
  @endif
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="flex min-h-screen" x-data="{ open: true }">
    
    <!-- Sidebar -->
    <aside :class="open ? 'w-64' : 'w-16'" class="bg-gradient-to-b from-cyan-700 to-cyan-500 text-white shadow-md transition-all duration-300 flex flex-col justify-between">
      <!-- Logo & Toggle -->
      <div>
        <div class="flex items-center justify-between p-4">
          <h1 class="text-xl font-extrabold" x-show="open">Sync<span class="text-cyan-100">MA</span></h1>
          <button @click="open = !open" class="text-white focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
            </svg>
          </button>
        </div>

        <!-- Menu -->
        <nav class="space-y-2 px-3 py-4 text-sm font-medium">
          <a href="/dashboard" class="flex items-center gap-3 px-3 py-2 rounded hover:bg-cyan-800 transition">
            <i data-feather="home" class="w-5 h-5"></i>
            <span x-show="open">Dashboard</span>
          </a>
          <a href="/organisasi" class="flex items-center gap-3 px-3 py-2 rounded hover:bg-cyan-800 transition">
            <i data-feather="layers" class="w-5 h-5"></i>
            <span x-show="open">Organisasi</span>
          </a>
          <a href="/lokasi" class="flex items-center gap-3 px-3 py-2 rounded hover:bg-cyan-800 transition">
            <i data-feather="map-pin" class="w-5 h-5"></i>
            <span x-show="open">Lokasi</span>
          </a>
          <a href="/anggota" class="flex items-center gap-3 px-3 py-2 rounded hover:bg-cyan-800 transition">
            <i data-feather="users" class="w-5 h-5"></i>
            <span x-show="open">Anggota</span>
          </a>
          <a href="/kegiatan" class="flex items-center gap-3 px-3 py-2 rounded hover:bg-cyan-800 transition">
            <i data-feather="calendar" class="w-5 h-5"></i>
            <span x-show="open">Kegiatan</span>
          </a>
        </nav>
      </div>

      <!-- Logout -->
      <div class="p-4">
        <a href="/logout" class="flex items-center gap-2 px-3 py-2 bg-red-500 hover:bg-red-600 rounded text-sm font-semibold transition">
          <i data-feather="log-out" class="w-4 h-4"></i>
          <span x-show="open">Logout</span>
        </a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 md:p-10 transition-all duration-300">
      @if (typeof pageTitle !== 'undefined')
        <h1 class="text-3xl font-semibold mb-6 text-cyan-700">{{ pageTitle }}</h1>
      @endif

      @if ($slots.main)
        {{{ await $slots.main() }}}
      @endif
    </main>
  </div>

  <!-- Jalankan ikon -->
  <script>
    feather.replace()
  </script>
</body>
</html>
